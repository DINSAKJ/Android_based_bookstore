<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ResetActivity">
    <ImageButton
        android:id="@+id/closebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:tint="@color/black"
        tools:ignore="RtlSymetry"
        android:src="@drawable/ic__close"
        />








    <ImageView
        android:id="@+id/reset_logo"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/reset"
        />

    <TextView
        android:id="@+id/resetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset your password?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reset_logo"
        android:textAlignment="center"
        android:textStyle="italic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:hint="Mobile Number"
            android:drawableStart="@drawable/ic_mobile"
            android:textColorHint="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/otp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginStart="0dp"
                android:drawableStart="@drawable/ic_lock"
                android:id="@+id/otp"
                android:inputType="number"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_otp"
                android:textStyle="normal"
                android:background="@drawable/button_shape"
                android:textSize="16sp"
                android:id="@+id/otpbtn"
                android:textColor="@color/white"
                android:layout_marginStart="0dp"
                android:paddingHorizontal="10dp"
                />



        </LinearLayout>
















        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"
            app:startIconTint="@color/black"
            app:passwordToggleTint="@color/black"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                 android:id="@+id/etPassword"
                android:hint="New password"
                android:textSize="16dp"
                android:paddingStart="10dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_lock"
                android:textColorHint="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleTint="@color/black"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etConfirmPassword"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:drawablePadding="8dp"
                android:textSize="16dp"
                android:hint="Confirm password"
                android:drawableStart="@drawable/ic_lock"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnReset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape"
            android:text="RESET PASSWORD"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Don't have an account?"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/black"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:id="@+id/faccount"
            />



    <TextView
        android:id="@+id/fregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        android:hint="Register"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>






























