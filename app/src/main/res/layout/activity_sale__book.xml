<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"
    tools:context=".Sale_BookActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Book Title"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="50dp"
        android:id="@+id/title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Author"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/title"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/author"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Published In"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/author"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/published"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Description"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/published"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/desc"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Language"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/desc"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/lang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Actual Price"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"

        android:gravity="center"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/lang"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/aprice"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Expected Price"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/aprice"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/sprice"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Contact Number"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/edit_text_curved_white"
        android:textSize="17sp"
        android:layout_below="@+id/sprice"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/cno"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to upload"
        android:background="@drawable/primarydark_button"
        android:textSize="18sp"
        android:id="@+id/proceedbtn"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/cno"
        />


</LinearLayout>
</RelativeLayout>