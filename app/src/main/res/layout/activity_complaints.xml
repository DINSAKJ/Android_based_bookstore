<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/as"
    tools:context=".Complaints">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textColor="@color/black"
    android:gravity="center"
    android:id="@+id/comptext"
    android:textStyle="bold"
    android:layout_marginTop="30dp"
    android:text="COMPLAINTS"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/complaint"
        android:layout_height="wrap_content"
        android:text="Complaint related to:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_curved_white"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/compedit"
         android:layout_below="@+id/complaint"/>


    <TextView
        android:id="@+id/compdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/compedit"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:text="Complaint:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/compdesed"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/compdes"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_curved_white" />

    <Button
        android:id="@+id/compbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/compdesed"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_black"
        android:text="Send complaints"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>


