<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".HomeActivity">


    <ImageButton
        android:id="@+id/closebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="340dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        tools:ignore="RtlSymetry"
        android:src="@drawable/log"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="UselessParent" />

    <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:padding="5dp"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/searchbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:clickable="true"

                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:background="@drawable/edit_text_curved_white"
                    android:src="@drawable/se"
                    android:layout_gravity="center"
                    android:contentDescription="@string/img" />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/usalebtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/qq"
                    android:background="@drawable/edit_text_curved_white"
                    />




            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_below="@id/layout_1"
            android:layout_marginTop="1dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/pdfbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pdf"
                    android:layout_below="@+id/stext"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_curved_white"
                    />




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/articlesbtn"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"

                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"

                app:cardElevation="8dp">

                <ImageButton
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/edit_text_curved_white"
                    android:contentDescription="@string/img"
                    android:src="@drawable/articlenew" />


            </androidx.cardview.widget.CardView>

















        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_below="@id/layout_2"
            android:layout_marginTop="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="8dp">

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="100dp"

                    android:src="@drawable/ffeed_back"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_curved_white"
                    android:contentDescription="@string/img" />




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/complaintbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/complaints"
                    android:layout_below="@+id/ptext"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_curved_white"
                    />



            </androidx.cardview.widget.CardView>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/layout_3"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profilebtn"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_curved_white"
                />




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/orderedbtn"
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/mypurchase"
                android:background="@drawable/edit_text_curved_white"
                />




        </androidx.cardview.widget.CardView>
















    </LinearLayout>



</RelativeLayout>